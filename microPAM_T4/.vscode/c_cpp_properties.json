{
  "env": {
    "ROOT": "${workspaceFolder}",
    "ROOT0": "${ROOT}/../../../arduino-1.8.19/hardware",
    "ROOT1": "${ROOT0}/teensy/avr",
    "LOCAL_LIBRARIES": "${ROOT}/../libraries",
    "COMMON_LIBRARIES": [
      "${ROOT1}/libraries/Audio/**",
	    "${ROOT1}/libraries/SerialFlash/**",
      "${ROOT1}/libraries/Wire/**",
      "${ROOT1}/libraries/SPI/**",
      "${ROOT1}/libraries/Time/**",
      "${ROOT1}/libraries/SD/**",
      "${ROOT1}/libraries/SdFat/**"
	  
    ],
    "COMMON_DEFINES": [ "TEENSYDUINO=154",
                        "USB_MIDI_AUDIO_SERIAL",
                        "LAYOUT_US_ENGLISH",
                        "ARDUINO"
                      ]
  },
  "configurations": [
    { "name": "Teensy 36",
      "includePath": [
        "${COMMON_LIBRARIES}",
        "${ROOT1}/cores/teensy3"
      ],
      "forcedInclude": [],
      "defines": [
        "__MK66FX1M0__",
        "ARDUINO_TEENSY36",
        "F_CPU=96000000",
        "${COMMON_DEFINES}"
      ],
      "compilerPath": "${ROOT0}/tools/arm/bin/arm-none-eabi-gcc.exe",
      "intelliSenseMode": "gcc-arm",
      "cppStandard": "gnu++14"    
    },
    { "name": "Teensy 40",
      "includePath": [
        "${COMMON_LIBRARIES}",
        "${ROOT1}/cores/teensy4"
      ],
      "forcedInclude": [],
      "defines": [
        "__IMXRT1062__",
        "ARDUINO_TEENSY40",
        "F_CPU=396000000",
        "${COMMON_DEFINES}"
      ],
      "compilerPath": "${ROOT0}/tools/arm/bin/arm-none-eabi-gcc.exe",
      "intelliSenseMode": "gcc-arm",
      "cppStandard": "gnu++14"    
    },
    { "name": "Teensy 41",
      "includePath": [
        "${COMMON_LIBRARIES}",
        "${ROOT1}/cores/teensy4"
      ],
      "forcedInclude": [],
      "defines": [
        "__IMXRT1062__",
        "ARDUINO_TEENSY41",
        "F_CPU=24000000",
        "${COMMON_DEFINES}"
      ],
      "compilerPath": "${ROOT0}/tools/arm/bin/arm-none-eabi-gcc.exe",
      "intelliSenseMode": "gcc-arm",
      "cppStandard": "gnu++14"    
    }
  ],
  "version": 4
}